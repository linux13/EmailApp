<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowInformation" android:layout_weight="70" android:orientation="vertical" android:background="#80DEEA">



    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="15" android:weightSum="10" android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent" android:layout_weight="1.5">
            <TextView
                android:gravity="center"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:text="To" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent" android:layout_weight="8.5">
            <TextView
                android:paddingTop="25dp"

                android:layout_marginLeft="5dp"
                android:id="@+id/setemail"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="10" android:weightSum="10" android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:layout_weight=".7">
            <TextView
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="5dp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:text="Subject" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent" android:layout_weight="9.3">
            <TextView
                android:paddingTop="6dp"
                android:id="@+id/setSubject"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="40" android:weightSum="10">
        <TextView

            android:id="@+id/setMessage"
            android:textColorHint="#030303"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:gravity="center"  android:textSize="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="0dp" android:gravity="center">
        <Button
            android:id="@+id/correction"
            android:onClick="correction"
            android:textColor="#121111"
            android:background="#ede3ed"
            android:layout_width="160dp"
            android:layout_height="wrap_content" android:text="New Form" android:textSize="20dp" android:gravity="center"/>
    </LinearLayout>

</LinearLayout>